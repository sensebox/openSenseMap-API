    "cheerio": "^1.0.0-rc.5",
    "csv-parse": "^4.14.2",
    "eslint": "7.17.0",
    "mimelib": "^0.3.1",
    "mocha": "^8.2.1",
    "mqtt": "^3.0.0",
    "randomgeojson": "^1.0.0"
